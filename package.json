{
  "name": "sharedraftcontent",
  "version": "1.0.0",
  "description": "Share draft page content with non-CMS users",
  "devDependencies": {
    "clean-css": "^3.2.8",
    "node-sass": "^3.0.0"
  },
  "scripts": {
    "build:errorpage": "node-sass scss/error-page.scss | cleancss --skip-shorthand-compacting --output css/error-page.css",
    "build:sharecomponent": "node-sass scss/share-component.scss | cleancss --skip-shorthand-compacting --output css/share-component.css",
    "build:topbar": "node-sass scss/top-bar.scss | cleancss --skip-shorthand-compacting --output css/top-bar.css",
    "build": "npm run build:errorpage && npm run build:sharecomponent && npm run build:topbar"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/silverstripe-labs/silverstripe-sharedraftcontent.git"
  },
  "keywords": [
    "SilverStripe"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/silverstripe-labs/silverstripe-sharedraftcontent/issues"
  },
  "homepage": "https://github.com/silverstripe-labs/silverstripe-sharedraftcontent"
}
